            android:textStyle="bold"/>

        <EditText
            android:id="@+id/join_class_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#049c25"
            android:hint="Enter class code here"/>

